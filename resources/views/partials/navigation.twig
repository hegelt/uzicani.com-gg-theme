													{{ subCategory.name }}
												</a>
											{% endfor %}
										</div>
										<a href="{{ url_route('adv_list_seo', [entrySubCategory.slug]) }}">
											{{ trans('visiosoft.theme.uzicani::field.view_all') }}
										</a>
									</div>
								{% endfor %}
							</div>
							{#                            <div class="col-3 category-main-img d-none d-xl-block">#}
						{#                                <a href="#" class="p-3 d-flex justify-content-between align-items-end link-unstyled"#}
							{#                                   style="background-image: url('https://mcdn01.gittigidiyor.net/fred/page-based/header/img/sport.jpg');">#}
							{#                                    <div>#}
							{#                                        <p>Sport, Outdoor</p>#}
							{#                                        <span>All Categories</span>#}
							{#                                    </div>#}
							{#                                    <div class="d-flex justify-content-center align-items-center flex-shrink-0">#}
							{#                                        <img src="{{ img('visiosoft.theme.uzicani::images/more-categories.svg').url }}" alt="right arrow">#}
							{#                                    </div>#}
							{#                                </a>#}
							{#                            </div>#}
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
		{% if  (auth_check()) and (setting_value('visiosoft.theme.uzicani::show_button_in_menu'))    %}
			<div class="d-flex ml-auto">
				<a href="{{ setting_value('visiosoft.theme.uzicani::menu_button_url') }}" class="btn btn-primary w-210" rel="nofollow">
					{% if (setting_value('visiosoft.theme.uzicani::menu_button_icon') )%}
						<i class="{{setting_value('visiosoft.theme.uzicani::menu_button_icon')}}"></i>
					{% endif %}
					{{ setting_value('visiosoft.theme.uzicani::menu_button_text') }}
				</a>
			</div>
		{% endif %}
	</div>
</nav>

